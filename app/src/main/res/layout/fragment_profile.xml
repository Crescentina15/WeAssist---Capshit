<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProfileFragment">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <!-- Header Background -->
    <View
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="#9F97CA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/account_circle_24"
        android:contentDescription="profile_picture_desc"
        android:scaleType="centerCrop"
        android:background="@drawable/baseline_circle_24"
        app:layout_constraintTop_toTopOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Header Name -->
    <TextView
        android:id="@+id/headername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="James King"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Header Profile -->
    <TextView
        android:id="@+id/headerprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/headername"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Settings Options Container -->
    <LinearLayout
        android:id="@+id/settings_options_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/headerprofile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

      <!-- Edit Profile Option -->
      <LinearLayout
          android:id="@+id/edit_profile"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:padding="15dp"
          android:clickable="true"
          android:focusable="true"
          android:background="@drawable/clickable_item_background">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/profile"
            app:tint="@color/black"
            android:contentDescription="edit_profile_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Edit profile"
            android:textSize="16sp"
            android:textColor="@color/black" />
      </LinearLayout>

      <!-- Security Option -->
      <LinearLayout
          android:id="@+id/security"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:padding="15dp"
          android:clickable="true"
          android:focusable="true"
          android:background="@drawable/clickable_item_background">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/security"
            app:tint="@color/black"
            android:contentDescription="security_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Security"
            android:textSize="16sp"
            android:textColor="@color/black" />
      </LinearLayout>

      <!-- Privacy Option -->
      <LinearLayout
          android:id="@+id/privacy"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:padding="15dp"
          android:clickable="true"
          android:focusable="true"
          android:background="@drawable/clickable_item_background">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/privacy"
            app:tint="@color/black"
            android:contentDescription="privacy_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Privacy"
            android:textSize="16sp"
            android:textColor="@color/black" />
      </LinearLayout>

      <!-- Report a Problem Option -->
      <LinearLayout
          android:id="@+id/report_problem"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:padding="15dp"
          android:clickable="true"
          android:focusable="true"
          android:background="@drawable/clickable_item_background">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/problems"
            app:tint="@color/black"
            android:contentDescription="report_problem_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Report a problem"
            android:textSize="16sp"
            android:textColor="@color/black" />
      </LinearLayout>

      <!-- Add Account Option -->
      <LinearLayout
          android:id="@+id/add_account"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:padding="15dp"
          android:clickable="true"
          android:focusable="true"
          android:background="@drawable/clickable_item_background">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/adds"
            app:tint="@color/black"
            android:contentDescription="add_account_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Add account"
            android:textSize="16sp"
            android:textColor="@color/black" />
      </LinearLayout>

      <!-- Log Out Option -->
      <LinearLayout
          android:id="@+id/log_out"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:padding="15dp"
          android:clickable="true"
          android:focusable="true"
          android:background="@drawable/clickable_item_background">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/logout"
            app:tint="@color/black"
            android:contentDescription="log_out_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Log out"
            android:textSize="16sp"
            android:textColor="@color/black" />
      </LinearLayout>
    </LinearLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
