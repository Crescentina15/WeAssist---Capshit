<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_margin="8dp"
  android:cardCornerRadius="12dp"
  android:cardElevation="6dp"
  android:padding="18dp"
  android:layout_marginBottom="12dp"
  android:cardBackgroundColor="#FFFFFF">

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <ImageView
      android:id="@+id/lawyer_image"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:layout_marginBottom="8dp"
      android:src="@drawable/account_circle_24"
      android:scaleType="centerCrop"
      android:background="@drawable/account_circle_24" />


    <TextView
      android:id="@+id/lawyer_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="4dp"
      android:text="Atty. John Doe"
      android:textColor="@android:color/black"
      android:textSize="16sp"
      android:fontFamily="@font/inria_serif_bold"
      android:gravity="center" />



    <TextView
      android:id="@+id/lawyer_specialization"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:text="Notary Lawyer"
      android:textColor="@android:color/darker_gray"
      android:textSize="14sp"
      android:gravity="center" />


    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center">

      <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/baseline_star_rate_24"
        android:layout_marginEnd="4dp" />

      <TextView
        android:id="@+id/lawyer_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.3 (130 reviews)"
        android:textColor="#FFA000"
        android:textSize="12sp" />
    </LinearLayout>
  </LinearLayout>
</androidx.cardview.widget.CardView>
