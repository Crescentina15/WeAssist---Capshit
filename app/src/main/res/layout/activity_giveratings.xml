<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/appointmentMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="It Looks like your Appointment with Atty. Kalix Jace is done, Can you rate your experience?"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/rateExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate your Experience Now!"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"/>

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/commentLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional Comments"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/commentBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Write your comments here..."
                android:background="@android:drawable/editbox_background"
                android:padding="8dp"
                android:minHeight="100dp"
                android:gravity="top"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/submitRatingButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:background="@drawable/button_background"
                android:padding="8dp"
                android:layout_marginTop="16dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
    <!-- Para sa paghatag feedback ni client -->