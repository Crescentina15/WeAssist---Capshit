<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LawyersDashboardActivity">

    <!-- Lawyer Profile Section -->
<LinearLayout
android:id="@+id/profile_section"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:padding="20dp"
android:background="#DCCCE2"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent">

<ImageView
    android:id="@+id/profile_icon"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:layout_marginEnd="10dp"
    android:contentDescription="Profile Image"
    android:src="@drawable/account_circle_24" /> <!-- ✅ Ensure this exists or replace with a system icon -->

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif" /> <!-- ✅ Fallback font -->

    <TextView
        android:id="@+id/lawyer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atty. John Doe"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif" /> <!-- ✅ Fallback font -->
</LinearLayout>

</LinearLayout>

    <!-- Lawyer's Appointments List -->
<androidx.recyclerview.widget.RecyclerView
android:id="@+id/appointments_list"
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_marginTop="20dp"
android:layout_marginStart="15dp"
android:layout_marginBottom="16dp"
app:layout_constraintTop_toBottomOf="@id/profile_section"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
