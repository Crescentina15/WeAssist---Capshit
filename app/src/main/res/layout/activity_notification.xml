<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/light_pink"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/light_pink">

        <!-- Recent Section -->
        <TextView
            android:id="@+id/recentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/recentNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your appointment with Atty. Kalix Jace Martinez has been approved"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:paddingHorizontal="8dp"/>

        <TextView
            android:id="@+id/recentTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="October 24, 2024 12:45 PM"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="8dp"
            android:gravity="end"
            android:paddingHorizontal="8dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginVertical="8dp"/>

        <!-- Earlier Section -->
        <TextView
            android:id="@+id/earlierTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Earlier"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/earlierNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your appointment with Atty. Kalix Jace Martinez has been accepted"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:paddingHorizontal="8dp"/>

        <TextView
            android:id="@+id/earlierTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="October 24, 2024 12:30 PM"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="8dp"
            android:gravity="end"
            android:paddingHorizontal="8dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginVertical="8dp"/>

        <!-- Mark All as Read -->
        <TextView
            android:id="@+id/markAsReadButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark All as Read"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:foreground="?attr/selectableItemBackground"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
